{
  "name": "No Wikipedia Search",
  "description": "Remove the search bar from Wikipedia for fun navigation",
  "version": "1.0",
  "manifest_version": 3,
  "action": {
    "default_popup": "wiki.html",
    "default_icon": "./icons/wiki.png"
  },
  "content_scripts": [
    {
      "js": ["extension.js"],
      "matches": ["https://*.wikipedia.org/*"]
    }
  ],
  "icons": {
    "16": "./icons/wiki-16.png",
    "32": "./icons/wiki-16.png",
    "48": "./icons/wiki-16.png",
    "96": "./icons/wiki-16.png",
    "128": "./icons/wiki-16.png"
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "mywikiextension1234321@some.thing"
    }
  }
}
